{
  "name": "catalog-service",
  "version": "1.1.0",
  "description": "Catalog service for managing products, categories, variants, and images",
  "main": "src/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js",
    "test:ci": "cross-env NODE_ENV=test jest --config jest.config.js --ci --coverage --watchAll=false",
    "test:integration": "echo 'Integration tests not yet implemented' && exit 0",
    "test:watch": "cross-env NODE_ENV=test jest --config jest.config.js --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml",
    "usePathForSuiteName": true
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashnikh78/catalog-service.git"
  },
  "keywords": [
    "catalog",
    "service",
    "products",
    "categories",
    "microservice"
  ],
  "author": "ashnikh78",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "pg": "^8.16.3",
     "prom-client": "^15.1.0",
    "sequelize": "^6.32.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.30.1",
    "babel-jest": "^30.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "comma-dangle": ["error", "never"],
      "no-trailing-spaces": "error",
      "eol-last": "error"
    }
  }
}
